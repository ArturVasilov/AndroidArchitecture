<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/outer_circle"
        android:layout_width="@dimen/outer_circle_size"
        android:layout_height="@dimen/outer_circle_size"
        android:layout_gravity="center"
        android:src="@drawable/animation_circle"
        android:visibility="invisible"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/middle_circle"
        android:layout_width="@dimen/middle_circle_size"
        android:layout_height="@dimen/middle_circle_size"
        android:layout_gravity="center"
        android:src="@drawable/animation_circle"
        android:visibility="invisible"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/inner_circle"
        android:layout_width="@dimen/inner_circle_size"
        android:layout_height="@dimen/inner_circle_size"
        android:layout_gravity="center"
        android:src="@drawable/animation_circle"
        android:visibility="invisible"
        tools:ignore="ContentDescription"/>

</merge>