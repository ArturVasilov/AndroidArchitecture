<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.Fullscreen"/>

    <style name="AppTheme.LightGrey">
        <item name="colorPrimaryDark">@color/black_20</item>
        <item name="colorPrimary">@color/edge_effects_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="SelectableItemBackgroundLight">
        <item name="android:theme">@style/SelectableItemThemeLight</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SelectableItemThemeLight">
        <item name="colorControlHighlight">@color/highlight_color_light</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/highlight_color</item>
    </style>

    <style name="PrimaryProgressBar">
        <item name="android:theme">@style/PrimaryProgressBar.Color</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>

    <style name="PrimaryProgressBar.Color">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>

</resources>
